{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "formatter": { "ignore": ["dist", "storybook-static"] },
  "linter": {
    "rules": {
      "style": {
        "noNegationElse": "error",
        "noNonNullAssertion": "off",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false
          }
        }
      }
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
